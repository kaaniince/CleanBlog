<%- include('partials/_header') %>


<body>

  <%- include('partials/_nagivation') %>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('/img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1><%= post.title %></h1>
            <h2 class="subheading"><%= post.detail.split(' ').slice(0, 10).join(' ') %></h2>
            <span class="meta">Posted by
              <a href="#">Kaan</a>
              on <%= post.dateCreated.toLocaleDateString() %></span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p><%= post.detail %></p>
          <div class="text-right">
            <a href="/posts/edit/<%= post._id %>" class="btn btn-primary">Update</a>
            <a href="/posts/<%= post._id %>?_method=DELETE" onclick="return confirm('ARE YOU SURE?')" class="btn btn-danger">Delete</a>
          </div>
        </div>
      </div>
    </div>
  </article>

  <hr>

  <%- include('partials/_footer') %>


  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Custom scripts for this template -->
  <script src="js/clean-blog.min.js"></script>

</body>

</html>
